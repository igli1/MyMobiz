@model MobizAdmin.Data.Ratecategories

    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addServiceLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Service Rate</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="_CreateRateCategorie" id="RateCategorieModal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ServiceId" class="control-label"></label>
                            <input asp-for="ServiceId" value="@ViewData["ServiceId"]" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Lexo" class="control-label"></label>
                            <input asp-for="Lexo" class="form-control" />
                            <span asp-validation-for="Lexo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RateGrouping" class="control-label"></label>
                            <select asp-for="RateGrouping" class="form-control" asp-items="ViewBag.RateGrouping"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryConditions" class="control-label"></label>
                            <input asp-for="CategoryConditions" class="form-control" />
                            <span asp-validation-for="CategoryConditions" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal" onclick="CreateRateCategorie()">Save</button>
                </div>
            </div>
        </div>
    </div>

