@model MobizAdmin.Data.Referers

@{
    ViewData["Title"] = "CreateReferer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Referer</h1>
<h4>Service: <u>@ViewData["ServiceName"]</u></h4>
<h4>Referers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReferer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <input asp-for="ServiceId" value="@ViewData["ServiceId"]" readonly class="form-control" />
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Referer" class="control-label"></label>
                <input asp-for="Referer" required class="form-control" />
                <span asp-validation-for="Referer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tsd" class="control-label"></label>
                <input asp-for="Tsd" class="form-control" />
                <span asp-validation-for="Tsd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Services">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
