@model MobizAdmin.Data.Ratecategories

@{
    ViewData["Title"] = "EditRateCategorie";
}

<h1>Edit Rate Categorie</h1>

<h4>Rate categorie</h4>
<h4>@MobizAdmin.Resources.Services.ServicesText.Service_Name: <u>@ViewData["ServiceName"]</u></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRateCategorie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <input asp-for="ServiceId" class="form-control" readonly value="@Model.ServiceId"/>
            </div>
            <div class="form-group">
                <label asp-for="Lexo" class="control-label"></label>
                <input asp-for="Lexo" class="form-control" />
                <span asp-validation-for="Lexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RateGrouping" class="control-label"></label>
                <select asp-for="RateGrouping" class="form-control" asp-items="ViewBag.RateGrouping"></select>
                <span asp-validation-for="RateGrouping" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryConditions" class="control-label"></label>
                <input asp-for="CategoryConditions" class="form-control" />
                <span asp-validation-for="CategoryConditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RateCategorieDetails" asp-route-Id="@Model.Id" asp-route-ServiceName="@ViewData["ServiceName"]">Back to List</a>
</div>

