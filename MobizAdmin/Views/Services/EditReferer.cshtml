@model MobizAdmin.Data.Referers

@{
    ViewData["Title"] = "EditReferer";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditReferer</h1>
<h4>Service <u>@ViewData["ServiceName"]</u></h4>
<h4>Referers</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditReferer" asp-route-ServiceId="@ViewData["ServiceId"]" asp-route-ServiceName="@ViewData["ServiceName"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Referer" class="control-label"></label>
                <input asp-for="Referer" required value="@Model.Referer" class="form-control" />
                <span asp-validation-for="Referer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tsd" class="control-label"></label>
                <input asp-for="Tsd" minDate class="form-control" />
                <span asp-validation-for="Tsd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="RefererDetails" asp-route-ServiceId="@Model.ServiceId" asp-route-ServiceName="@ViewData["ServiceName"]">Back to Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
