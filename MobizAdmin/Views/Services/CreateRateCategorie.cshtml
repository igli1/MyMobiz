@model MobizAdmin.Data.Ratecategories

@{
    ViewData["Title"] = "Create Rate Categorie";
}

<h1>Create Rate Categorie</h1>

<h4>Service Name: @ViewData["ServiceName"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRateCategorie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <input asp-for="ServiceId" value="@ViewData["ServiceId"]" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Lexo" class="control-label"></label>
                <input asp-for="Lexo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RateGrouping" class="control-label"></label>
                <select asp-for="RateGrouping" class ="form-control" asp-items="ViewBag.RateGrouping"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryConditions" class="control-label"></label>
                <input asp-for="CategoryConditions" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ServicesList">@MobizAdmin.Resources.Services.ServicesText.Back_to_List</a>
</div>

