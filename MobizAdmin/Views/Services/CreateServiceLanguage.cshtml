@model MobizAdmin.Data.DTServiceLanguages
@{
    ViewData["Title"] = "Create Service Language";
}

<h1>Create Service Language</h1>
<h4>@MobizAdmin.Resources.Services.ServicesText.Service_Name: <u>@ViewData["ServiceName"]</u></h4>
<div class="row">
    <div  class="col-md-4">
        <form asp-action="CreateServiceRate" asp-route-ServiceName="@ViewData["ServiceName"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input id="ServiceName" readonly hidden value="@ViewData["ServiceName"]"/>
            <div id="NewExistingBtn">
                <span><input type="button" style="background-color:red;" id="ExistingBtn" value="Existing" onclick="ChangePanel(this)" /></span>
                <span><input type="button" id="NewBtn" value="New" onclick="ChangePanel(this)" /></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label">@MobizAdmin.Resources.Services.ServicesText.Service_Id</label>
                <input id="ServiceId" value="@ViewData["ServiceId"]" readonly class="form-control" />
            </div>
            <div id="ExistingPanel">
                <div class="form-group">
                    <label asp-for="Lang" class="control-label"></label>
                    <select id="Lang" class="form-control" asp-items="ViewBag.Languages"></select>
                </div>
            </div>
            <div id="NewPanel" hidden>
                <div class="form-group">
                    <label asp-for="Lang" class="control-label"></label>
                    <input id="NewLang" size="1" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Word" class="control-label"></label>
                    <input id="NewWord" size="2" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="button" value=@MobizAdmin.Resources.Services.ServicesText.Create onclick="Create()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="ServiceLanguages" asp-route-ServiceId="@ViewData["ServiceId"]" asp-route-ServiceName="@ViewData["ServiceName"]">Back to Service Languages</a>
</div>
@section Scripts {
    <script src="~/js/CreateServiceLanguage.js"></script>
}